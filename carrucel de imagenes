<!DOCTYPE html>
<html>
<head>
    <title>Carrusel de Imágenes</title>
    <style>
        .carousel {
            display: flex;
            overflow-x: scroll;
            scroll-snap-type: x mandatory;
            scroll-behavior: smooth;
            width: 100%;
            height: 300px; /* Ajusta la altura según tus necesidades */
        }

        .carousel img {
            width: 100%;
            height: auto;
            scroll-snap-align: center;
        }
    </style>
</head>
<body>
    <div class="carousel">
        <img src="1.jpg" alt="Imagen 1">
        <img src="2.jpg" alt="Imagen 2">
        <img src="3.jpg" alt="Imagen 3">
        <img src="4.jpg" alt="Imagen 4">
        <img src="5.jpg" alt="Imagen 5">
        <img src="6.jpg" alt="Imagen 6">
        <img src="7.jpg" alt="Imagen 7">
        <img src="8.jpg" alt="Imagen 8">
        <img src="9.jpg" alt="Imagen 9">
        <img src="10.jpg" alt="Imagen 10">
    </div>

    <script>
        const carousel = document.querySelector('.carousel');
        let isDown = false;
        let startX;
        let scrollLeft;

        carousel.addEventListener('mousedown', (e) => {
            isDown = true;
            startX = e.pageX - carousel.offsetLeft;
            scrollLeft = carousel.scrollLeft;
        });

        carousel.addEventListener('mouseleave', () => {
            isDown = false;
        });

        carousel.addEventListener('mouseup', () => {
            isDown = false;
        });

        carousel.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - carousel.offsetLeft;
            const walk = (x - startX) * 3; // Ajusta la sensibilidad del movimiento
            carousel.scrollLeft = scrollLeft - walk;
        });
    </script>
</body>
</html>
